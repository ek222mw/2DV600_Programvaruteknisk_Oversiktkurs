package Exercise1;

import java.util.Arrays;

public class ArrayIntList extends AbstractIntCollection implements IntList {

	
	
	@Override
	public void add(int n) {
		
			if(values.length == size)
			{
				resize();
			}
			if(values.length > size)
			{
				values[size++] = n;
			}
			
		
		
		
	}

	@Override
	public void addAt(int n, int index) {
		if(index < values.length)
		{
				if(values[index] > 0)
				{
					if(values.length <= size)
					{
						resize();
					}
					
					for(int i = size; i>index-1;i--)
					{
						values[values.length] = values[i];
					}
					
					
				}
			
			
				values[index] = n;
		}
		
	}

	@Override
	public void remove(int index) {
		
		if(values[index] > 0)
		{
			
			System.arraycopy(values,index+1,values,index,values.length-1-index);
			int[] tmp = new int[values.length-1];
			System.arraycopy(values,0,tmp,0,values.length-1); 
			values = tmp;
			
			
		}
		
		
	
	}

	@Override
	public int get(int index) {
		
		return values[index];
	}

	@Override
	public int indexOf(int n) {
		for(int i= 0;i<values.length;i++)
		{
			if(values[i] == n)
			{
				return i;
			}
		}
		
		
		return -1;
	}

}
