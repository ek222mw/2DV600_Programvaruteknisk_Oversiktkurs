package Exercise2;

import java.util.ArrayList;
import java.util.List;


public class Vehicle extends FerryClass {

	private double countSpace;
	private int countVehicles;
	List<Object> vehiclelist = new ArrayList<>(); 
	
	
	
	public double getTotSpace()
	{
		return countSpace;
	}
	
	public int getTotVehicles()
	{
		return countVehicles;
	}
	
	public void AddVehicle(Object obj, double space)
	{
		countVehicles++;
		vehiclelist.add(obj);
		countSpace += space;
		
	}
	
	
}
