package Deck;

import java.util.ArrayList;

import Deck.Card.Rank;
import Deck.Card.Suite;

public class Deck {
	
	
	private static ArrayList<Card> cards;
	
	public Deck()
	{
		
		for(Suite suite: Suite.values())
		{
			for(Rank rank : Rank.values())
			{
				cards.add(new Card(rank, suite));
			}
		}
		
	}
	
	
